<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiayu.jyme.juyoumian_v1.RaiseFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#3CA89B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="306dp"
                android:layout_height="31dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/searchbox_raise" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/add" />
        </LinearLayout>

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:text="搜索你感兴趣的内容"
            android:textColor="#817e7e"
            android:textSize="10dp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"

                    android:src="@drawable/zharan" />

                <Button
                    android:id="@+id/join"
                    android:layout_width="83dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="365dp"
                    android:background="@drawable/join" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>